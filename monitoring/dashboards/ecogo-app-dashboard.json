{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Application Status",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [{ "expr": "up{job=\"ecogo-app\"}", "legendFormat": "Status" }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "green", "value": 1 }] }
        }
      }
    },
    {
      "title": "Request Rate (req/s)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        { "expr": "rate(http_server_requests_seconds_count{job=\"ecogo-app\"}[1m])", "legendFormat": "{{ method }} {{ uri }} ({{ status }})" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "title": "Response Time (95th percentile)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        { "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{job=\"ecogo-app\"}[5m]))", "legendFormat": "p95" },
        { "expr": "histogram_quantile(0.50, rate(http_server_requests_seconds_bucket{job=\"ecogo-app\"}[5m]))", "legendFormat": "p50" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "title": "JVM Heap Memory",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        { "expr": "jvm_memory_used_bytes{job=\"ecogo-app\", area=\"heap\"}", "legendFormat": "Used" },
        { "expr": "jvm_memory_committed_bytes{job=\"ecogo-app\", area=\"heap\"}", "legendFormat": "Committed" },
        { "expr": "jvm_memory_max_bytes{job=\"ecogo-app\", area=\"heap\"}", "legendFormat": "Max" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },
    {
      "title": "JVM GC Pause Duration",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        { "expr": "rate(jvm_gc_pause_seconds_sum{job=\"ecogo-app\"}[5m])", "legendFormat": "{{ gc }} {{ action }}" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "title": "Active Threads",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "targets": [
        { "expr": "jvm_threads_live_threads{job=\"ecogo-app\"}", "legendFormat": "Live" },
        { "expr": "jvm_threads_daemon_threads{job=\"ecogo-app\"}", "legendFormat": "Daemon" },
        { "expr": "jvm_threads_peak_threads{job=\"ecogo-app\"}", "legendFormat": "Peak" }
      ]
    },
    {
      "title": "HTTP Error Rate (5xx)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "targets": [
        { "expr": "rate(http_server_requests_seconds_count{job=\"ecogo-app\", status=~\"5..\"}[5m])", "legendFormat": "5xx errors/s" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps", "color": { "mode": "fixed", "fixedColor": "red" } } }
    }
  ],
  "schemaVersion": 38,
  "tags": ["ecogo", "application", "jvm"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "EcoGo Application",
  "uid": "ecogo-app",
  "version": 1
}
