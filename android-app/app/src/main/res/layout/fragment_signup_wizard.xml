<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Faculty Selection Layout -->
    <LinearLayout
        android:id="@+id/layout_faculty_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Faculty"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:text="This determines your starter outfit!"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_faculties"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:overScrollMode="never" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Continue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/primary"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

    <!-- Mascot Reveal Layout -->
    <LinearLayout
        android:id="@+id/layout_mascot_reveal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_reveal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're all set!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_reveal_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:text="Meet your new buddy."
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

        <!-- Large Mascot Display -->
        <com.ecogo.ui.views.MascotLionView
            android:id="@+id/mascot_reveal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp" />

        <!-- Faculty Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/view_faculty_color"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_shape" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_faculty_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Engineering"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/text_faculty_slogan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Building the Future ðŸ› ï¸"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Outfit Preview -->
        <TextView
            android:id="@+id/text_outfit_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Starter Outfit: Safety Helmet, Engin Plaid"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_lets_go"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Let's Go!"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_chevron_right"
            app:iconGravity="end"
            app:backgroundTint="@color/primary"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</FrameLayout>
